/* pages/dictation/dictation.wxss */

.listBox {
  background: #fff;
  margin: 30rpx 30rpx 0 30rpx;
  padding: 20rpx 28rpx 30rpx 20rpx;
  clear: both;
  overflow: hidden;
  margin-bottom: 20rpx;
  position: relative;
  /* box-shadow:  */
  border-radius:20px;
}

.listTitle {
  font-size: 30rpx;
  line-height: 30rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  margin: 20rpx 0 38rpx 0;
  display: flex;
}

.icon {
  width: 12rpx;
  height: 34rpx;
  background: rgba(0, 151, 255, 1);
  border-radius: 6rpx;
  justify-content: center;
  margin-right: 16rpx;
}

.liBox {
  font-size: 26rpx;
  font-weight: 400;
  color: rgba(0, 151, 255, 1);
  float: left;
  padding: 4rpx 21rpx;
  border-radius: 8rpx;
  border: 1px solid rgba(0, 151, 255, 0.5);
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}

.langdu {
  height: 40rpx;
  position: absolute;
  top: 36rpx;
  right: 28rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  display: flex;
  justify-content: center;
  color: #0097ff;
}

.langdu image {
  width: 36rpx;
  height: 28rpx;
  margin-right: 8rpx;
  margin-top: 9rpx;
  
}
