/* pages/details/details.wxss */

.mainBox {
  width: 642rpx;
  padding: 0 24rpx;
  height: 104rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 20rpx;
  margin: 0 auto;
  margin-top: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.subject {
  width: 80rpx;
  height: 48rpx;
  background: rgba(0, 151, 255, 1);
  border-radius: 24rpx;
  line-height: 48rpx;
  text-align: center;
  font-size: 26rpx;
  /* font-family:PingFangSC-Medium; *//* font-weight:500; */
  color: rgba(255, 255, 255, 1);
}

.left {
  font-size: 26rpx;
  color: rgba(102, 102, 102, 1);
}

.right {
  font-size: 26rpx;
  color: rgba(102, 102, 102, 1);
}

.tixing {
  color: #0097ff;
}

.red {
  color: #f43531;
}

.title {
  font-size: 26rpx;
  color: rgba(51, 51, 51, 1);
  margin: 28rpx 30rpx;
  /* text-indent: 10rpx; */
  padding: 0 12rpx;
  border-left: 8rpx solid #0097ff;
  line-height: 26rpx;
}

.yuanying {
  width: 642rpx;
  padding: 20rpx 24rpx;
  margin: 0 auto;
  background: rgba(255, 255, 255, 1);
  border-radius: 20rpx;
  font-size: 26rpx;
  /* font-family: PingFangSC-Regular; *//* font-weight: 400; */
  color: rgba(51, 51, 51, 1);
}

.imgBox {
  /* flex-grow: row no-wrap;
  justify-content: space-between; */
  margin: 0 30rpx 20rpx 30rpx;
  padding: 20rpx 5rpx;
  box-sizing: border-box;
  /* height: 180rpx; */
  align-items: center;
  border-bottom: 1px solid #f2f2f2;
  background: #fff;
  border-radius: 16rpx;
  clear: both;
  overflow: hidden;
}

.img {
  width: 145rpx;
  height: 145rpx;
  position: relative;
  border-radius: 16rpx;
  overflow: hidden;
  margin: 0 12rpx;
  padding: 0;
  /* margin: 0 4rpx; */
  float: left;
  /* padding-right: 5rpx; */
}

.img image {
  width: 145rpx;
  height: 145rpx;
  
  border-radius: 16rpx;
  border: 1rpx solid rgba(232, 232, 232, 1);
}
