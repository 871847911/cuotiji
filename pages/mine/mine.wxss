/* pages/mine/mine.wxss */

page {
  background: #fff;
}

.myBox {
  /* display: flex; */
  height: 100%;
}

.item-ans {
  width: 100%;
  display: flex;
  flex-grow: row no-wrap;
  justify-content: space-between;
  padding: 30rpx;
  box-sizing: border-box;
  height: 180rpx;
  align-items: center;
  background: #0097ff;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  position: relative;
  padding-right: 38rpx;
}

.avatar .img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.avatar .doyen {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  bottom: -2px;
  right: 20rpx;
}

.expertInfo {
  font-size: 12px;
  flex-grow: 2;
  color: #b0b0b0;
  line-height: 1.5em;
}

.expertInfo .name {
  font-size: 16px;
  color: #fff;
  margin-bottom: 6px;
}

.tag {
  color: #fff;
}

.answerHistory {
  color: #fff;
}

.askBtn {
  width: 193rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 14px;
  border-radius: 60rpx;
  border: 1px solid #fff;
  color: #fff;
}

.tab-content {
  margin-top: 80rpx;
}

.scoll-h {
  height: 100%;
}

.weui-cell_access {
  display: flex;
  justify-content: center;
}

.weui-cell__hd {
  display: flex;
  align-items: center; /*垂直居中*/
}

.weui-panel__bd {
  border-top: 16rpx solid #f5f5f5;
  flex: 1;
  background: #fff;
}

.text {
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}
.weui-cell_access{
  border-color: #F5F5F6
}